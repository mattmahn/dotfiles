[colors]
background = #00f0f0f0
background-alt = #444
foreground = #2d3635
foreground-alt = #555
primary = ${xrdb:*.color1:#ffb52a}
secondary = ${xrdb:*.color2:#e60053}
alert = ${xrdb:*.color3:#bd2c40}

;background  = ${xrdb:*.background:#222}
;foreground  = ${xrdb:*.foreground:#dfdfdf}

black       = ${xrdb:*.color0:#000000}
